---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="description" content="A quick overview of the Furry Community based out of Saskatchewan with overlap from surrounding areas." />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
	</body>
</html>

<style is:global>
  @font-face {
    font-family: 'Alexandria Variable';
    font-style: normal;
    font-display: swap;
    font-weight: 100 900;
    src: url(@fontsource-variable/alexandria/files/alexandria-latin-wght-normal.woff2) format('woff2-variations');
    unicode-range: U+0000-00FF,U+0131,U+0152-0153,U+02BB-02BC,U+02C6,U+02DA,U+02DC,U+0304,U+0308,U+0329,U+2000-206F,U+20AC,U+2122,U+2191,U+2193,U+2212,U+2215,U+FEFF,U+FFFD;
  }

  html {
    background-color: #45B049;
    background-image: url("data:image/svg+xml;base64,");
    background-size: 880px;
    background-position: center;
    background-attachment: fixed;
  }

  body {
    max-width: 600px;
    margin: 0 auto;
    padding: 3rem;
    font-family: 'Alexandria Variable', sans-serif;
    font-weight: 300;
    text-align: center;
    font-size: 14pt;
    color: #000000c0;
  }

  h1, h2, h3 {
    font-weight: 600;
    color: #000;
  }

  h1 {
    font-size: 3em;
  }

  h2 {
    font-size: 2em;
  }

  h3 {
    font-size: 1.5em;
  }

  p {
    line-height: 2rem;
  }

  main {
    margin: 2rem 2rem 4rem;
  }

  main > *:not(:first-child) {
    margin: 4rem 0 0;
  }

  main section > * {
    margin-top: 1.5rem;
    margin-bottom: 0;
  }

  @media (max-width: 736px) {
    body {
      padding: 2rem;
    }

    h1 {
      font-size: 2.5em;
    }
  }

  @media (max-width: 360px) {
    main {
      margin-left: 0;
      margin-right: 0;
    }
  }
</style>
